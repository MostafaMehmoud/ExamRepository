@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";  // هنا تضع المسار الصحيح للـ Layout
}


<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - لوحة التحكم</title>

    <!-- إضافة Bootstrap CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

    <!-- إضافة CSS مخصص (لوحة التحكم) -->
    <link href="~/css/admin.css" rel="stylesheet" />  <!-- مسار ملف CSS مخصص -->
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">لوحة التحكم</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Account" asp-action="Logout">تسجيل الخروج</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer mt-auto py-3 bg-light text-center">
        <div class="container">
            <span class="text-muted">&copy; @DateTime.Now.Year - لوحة تحكم نظام الامتحانات</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
